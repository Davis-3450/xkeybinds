{
  "manifest_version": 3,
  "name": "xkeybinds",
  "version": "0.1",
  "description": "Keybindings for message navigation on x.com (Twitter)",
  "permissions": ["scripting", "activeTab"],
  "host_permissions": ["https://twitter.com/*", "https://x.com/*"],
  "content_scripts": [
    {
      "matches": ["https://twitter.com/*", "https://x.com/*"],
      "js": ["content.js"]
    }
  ]
}
